  <script>
    const offers = [
      "https://nx2bs.com/c?o=42&a=26132",
      "https://nx2bs.com/c?o=44&a=26132",
      "https://nx2bs.com/c?o=41&a=26132",
      "https://nx2bs.com/c?o=429&a=26132",
      "https://nx2bs.com/c?o=416&a=26132"
    ];

    let seen = JSON.parse(localStorage.getItem("seenOffers") || "[]");
    let unseen = offers.filter(link => !seen.includes(link));
    if (unseen.length === 0) {
      seen = [];
      unseen = [...offers];
    }

    const selectedOffer = unseen[Math.floor(Math.random() * unseen.length)];
    seen.push(selectedOffer);
    localStorage.setItem("seenOffers", JSON.stringify(seen));
    document.getElementById("manualLink").href = selectedOffer;

    fetch("https://ipapi.co/json/")
      .then(res => res.json())
      .then(data => {
        if (data.country !== "US") {
          document.getElementById("fallback").style.display = "block";
          document.getElementById("spinner").style.display = "none";
          document.getElementById("countdown").textContent = "—";
        } else {
          startRedirect();
        }
      })
      .catch(() => startRedirect());

    function startRedirect() {
      let seconds = 5;
      const countdown = document.getElementById("countdown");
      const timer = setInterval(() => {
        seconds--;
        countdown.textContent = seconds;
        if (seconds <= 0) {
          clearInterval(timer);
          window.location.href = selectedOffer;
        }
      }, 1000);
    }
  </script>
